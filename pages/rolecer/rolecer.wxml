<!--pages/rolecer/rolecer.wxml-->
<page-meta root-font-size="system"/>
<view class="page" data-weui-theme="{{theme}}" data-weui-mode="{{mode}}">
	<view class="weui-form">
		<view class="weui-form__control-area">
			<view class="weui-cells__group weui-cells__group_form">
				<view class="weui-cells">

          <view class="weui-cell weui-cell_active weui-cell_select weui-cell_select-before">
						<view class="weui-cell__hd">
              <view class="weui-select" style="width: 4em;">手机号</view>
						</view>
						<view class="weui-cell__bd">
							<input class="weui-input" type="number" placeholder="请输入手机号" bindinput="bindPhoneInput"></input>
						</view>
					</view>

          <view class="weui-cell weui-cell_active weui-cell_select weui-cell_select-before">
						<view class="weui-cell__hd">
              <view class="weui-select" style="width: 3em;">姓名</view>
						</view>
						<view class="weui-cell__bd">
							<input class="weui-input" type="text" placeholder="请输入您的姓名" bindinput="bindTeanameInput"></input>
						</view>
					</view>

          <!-- <view class="weui-cell weui-cell_active weui-cell_select weui-cell_select-before">
						<view class="weui-cell__hd">
              <view class="weui-select" style="width: 4em;">认证码</view>
						</view>
						<view class="weui-cell__bd">
							<input class="weui-input" type="number" placeholder="请输入您的认证码" bindinput="bindCodeInput"></input>
						</view>
					</view> -->

          <view class="weui-form__opr-area">
			      <view class="weui-btn weui-btn_primary" aria-role="button" bindtap="tapLogin">认证</view>
		      </view>

          <view class="weui-form__tips-area">
            <text style="color: red;" decode="{{true}}">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;老师您好，绑定只用于识别身份，为保护学生隐私，家长绑定后只能查看自己孩子的成绩，目前老师可查阅所有学生成绩，本应用严格遵守相关法律规定。如有问题或者建议可通过《我的》→《反馈》留言，谢谢！</text>
          </view>


				</view>
			</view>
		</view>
	</view>
</view>

