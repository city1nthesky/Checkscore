.container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
  box-sizing: border-box;
  background-color: #fff;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.total {
  font-size: 28rpx;
  color: #999;
}

.subject {
  margin-top: 40rpx;
  width: 100%;
}

.subject-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #f8f8f8;
  padding: 20rpx;
  box-sizing: border-box;
}

.subject-name {
  font-size: 28rpx;
  color: #333;
  flex-basis: 30%;
  text-align: center;
}

.subject-data {
  font-size: 28rpx;
  color: #333;
  flex-basis: 35%;
  text-align: center;
}

.subject-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #eee;
  padding: 20rpx;
  box-sizing: border-box;
}

.summary {
  display: flex;
  justify-content: space-between;
  margin-top: 40rpx;
  width: 100%;
}

.summary-item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.summary-label {
  font-size: 28rpx;
  color: #999;
}

.summary-value {
  font-size: 28rpx;
  color: #333;
  margin-top: 20rpx;
}

.red {
  color: #f00;
}

.table {
  margin-top: 40rpx;
  width: 100%;
}

.table-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #f8f8f8;
  padding: 20rpx;
  box-sizing: border-box;
}

.table-item {
  font-size: 28rpx;
  color: #333;
  flex-basis: 20%;
  text-align: center;
}

.table-body {
  background-color: #fff;
}

.table-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #eee;
  padding: 20rpx;
  box-sizing: border-box;
}

.button-wrapper {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 100vh;
}

.button {
  padding: 12px 24px;
  background-color: #f2f2f2;
  border: none;
  border-radius: 8px;
  font-size: 16px;
  margin-bottom: 20px;
}

.button:hover {
  background-color: #d9d9d9;
}

.button:active {
  background-color: #bfbfbf;
}


.row-style{
  display: flex;

  flex-direction: row;

}

.su-table-box {
  height: 100%;
  overflow-x: auto;
  padding-bottom: 10rpx;
  padding-top: 30rpx;
}

.su-table {
  margin: 0 auto;
  display: table;
  border-collapse: collapse;
  overflow-x: auto;
  word-break: keep-all;
  white-space: nowrap;
  background-color: #FFFFFF;
  width: 90%;
  border-radius: 20rpx;
}

.su-tr {
  display: table-row;
}

.su-th {
  display: table-cell;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border: 1rpx solid #DDDDDD;
  border-right: none;
  border-bottom: none;
  background-color: #ddd;
  color: #333;
}

.su-td {
  padding: 0rpx 30rpx;
  display: table-cell;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border: 1rpx solid #DDDDDD;
  border-right: none;
}


.identity-content {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  background-color: #f0f0f0; /* 设置为红色背景 */
  border: none;
  padding: 0;
  margin-bottom: -23px;
}

.identity-icon {
  width: 20px;
  height: 10px;
  margin-right: 5px;  /*Add a margin to separate the image and text*/
  border: none;
  padding: 0;
}

.identity-text {
  font-size: 12px;
  border: none;
  padding: 0;
}

.additional-control {
  width: 150px;
  font-size: 12px;
  border: none;
  padding: 0;
}